<%= simple_form_for(@modalidade) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :titulo %>
    <%= f.input :limite %>
  </div>

  <div class="form-actions">
		
		
	<%= f.submit 'Salvar', :class => 'btn btn-primary' %>
	<%= link_to ' Voltar', modalidades_path ,  class: "btn btn-default "%>


  </div>
<% end %>
