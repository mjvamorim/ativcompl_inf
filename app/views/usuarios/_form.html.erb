<%= simple_form_for(@usuario) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
	<%= f.input :nome %>
	<%= f.input :email %>
	<%= f.input :matricula, :class => "matricula" %>
	<%= f.label :curso %>		
	<%= f.select :curso, options_for_select([['Bacharelao em Sistemas de Informação'], ['Engenharia da Computação']],f.object.curso)%>
	<br/>
	<%= f.label :tipo %>	
	<div><%= f.radio_button :tipo,  "Aluno" , :checked => (f.object.tipo == "Aluno") %> <%= f.label :tipo, "Aluno" %> </div>
	
	<div><%= f.radio_button :tipo,  "Professor" , :checked => (f.object.tipo == "Professor")%> <%= f.label :tipo, "Professor" %> </div>

	<div>
		Data Confirmação:
		<%= f.text_field :confirmed_at,  class: "datepicker"  %> 
	</div>
	<br/>
</div>

<div class="form-actions">
	<%= f.submit 'Salvar', :class => 'btn btn-primary' %>
	<%= link_to ' Voltar', usuarios_path ,  class: "btn btn-default "%>
</div>

<% end %>

<script>
$(document).ready(function(){
	$('.datepicker').datepicker({format: 'dd-mm-yyyy'});
	$('#usuario_matricula').inputmask("9999.9.999.9999");  
});
</script>


